<!-- Navigation bar rendered on every page -->
<nav class = "topnav" id = "myNav">
    <!-- Corner Logo -->
    <p> <a href = "/"><img src = "../images/thickSmallTriangle.png"> MultiView </a></p>

    <!-- Navigation Bar Tabs -->
    <ul>
        <li> <a href = "/home"> Home </a></li>
        <li> <a href = "../about"> About </a></li>
        <li> <a href = "../search?query="> Articles </a></li>
        <li> <a href = "../opportunities"> Opportunities </a></li>

        <!-- Displays when the user is logged in -->
        <% if(user) { %>
        <li> <a href = "../profile/<%=user.username%>"> <img src = "../images/man-user.png" class = "icon">
                <span><%= user.username%> </span> </a></li>

        <!-- Need to include # for the drop down functionality -->
        <li><a href = "#"><img src = "../images/thickSmallTriangle.png" class = "drop-icon"> </a>
            <ul>
                <!-- if the user is an editor than this renders -->
                <% if(user.is_editor) { %>
                    <li> <a href = "../create-article"> Create an Article </a></li>

                <!-- if the user is not an editor this will render -->
                <% } else { %>
                    <li> <a href = "../editor-application"> Become an Editor </a></li>
                <%}%>
                <li> <a href = "../create-opportunity"> Create an Event </a></li>
                <li> <a href = "../logout"> Log Out </a></li>
            </ul>
        </li>
        <%} else { %>
            <!-- Displays when the user isn't logged in -->
            <li><a href = "../"><button type = "button" id="login_nav"> Login </button></a></li>
        <%}%>
    </ul>
</nav>
