<header class = "centered_header">
    <h1 id = "pageHeading">Create Account</h1>
</header>

<section>
    <!-- TODO Proper redirect. Currently sends the entered info. -->
    <form action = "../new_user" method="get">
        <h3>Username</h3>
        <input type="text" class="account" placeholder="Enter username" name="username"/>
